---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Discover the best Linux and open-source tools curated by the community" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Import Global CSS with Tailwind -->
    <link rel="stylesheet" href="/src/styles/global.css">
    
    <!-- Import Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
      body { font-family: 'Inter', sans-serif; }
    </style>
  </head>
  <body class="bg-gray-50 text-gray-900 min-h-screen">
    <header class="bg-white border-b border-gray-100 sticky top-0 z-50 backdrop-blur-sm bg-white/90">
      <div class="max-w-4xl mx-auto px-6 py-4">
        <div class="flex items-center justify-center space-x-12">
          <!-- Logo - Centered -->
          <a href="/" class="flex items-center space-x-2 text-center">
            <span class="text-2xl">üêß</span>
            <span class="text-xl font-bold text-gray-900">Linux Directory</span>
          </a>
          
          <!-- Navigation - Centered -->
          <nav class="hidden md:flex items-center space-x-8">
            <a href="/" class="text-gray-600 hover:text-blue-600 font-medium transition-colors">
              Home
            </a>
            <a href="/categories" class="text-gray-600 hover:text-blue-600 font-medium transition-colors">
              Categories
            </a>
            <a href="/about" class="text-gray-600 hover:text-blue-600 font-medium transition-colors">
              About
            </a>
            <a href="/submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200">
              Submit Tool
            </a>
          </nav>
          
          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button class="text-gray-600 hover:text-gray-900">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </header>
    
    <main class="flex-1">
      <slot />
    </main>
    
    <footer class="bg-white border-t border-gray-100 mt-20">
      <div class="max-w-4xl mx-auto px-6 py-12">
        <!-- Main Footer Content -->
        <div class="text-center mb-8">
          <div class="flex items-center justify-center space-x-2 mb-4">
            <span class="text-2xl">üêß</span>
            <span class="text-xl font-bold text-gray-900">Linux Directory</span>
          </div>
          <p class="text-gray-600 max-w-md mx-auto mb-6">
            Curating the best open-source tools and Linux software for developers, sysadmins, and enthusiasts.
          </p>
          
          <!-- Navigation Links -->
          <div class="flex items-center justify-center space-x-8 mb-8">
            <a href="/" class="text-gray-600 hover:text-blue-600 font-medium transition-colors">Home</a>
            <a href="/categories" class="text-gray-600 hover:text-blue-600 font-medium transition-colors">Categories</a>
            <a href="/about" class="text-gray-600 hover:text-blue-600 font-medium transition-colors">About</a>
            <a href="/submit" class="text-gray-600 hover:text-blue-600 font-medium transition-colors">Submit Tool</a>
          </div>
        </div>
        
        <!-- Copyright -->
        <div class="border-t border-gray-100 pt-8 text-center">
          <p class="text-gray-500 text-sm">
            &copy; 2025 Linux Directory. Built with Astro & hosted on Cloudflare. Open source at heart.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>