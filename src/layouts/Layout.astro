---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Discover the best Linux and open-source tools curated by the community" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Import Tailwind CSS directly -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Import Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
      body { font-family: 'Inter', sans-serif; }
    </style>
  </head>
  <body class="bg-gray-50 text-gray-900 min-h-screen">
    <header class="bg-white shadow-sm border-b sticky top-0 z-50">
      <nav class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-blue-600 flex items-center gap-2">
          üêß Linux Directory
        </a>
        <div class="hidden md:flex gap-6">
          <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
          <a href="/categories" class="hover:text-blue-600 transition-colors">Categories</a>
          <a href="/about" class="hover:text-blue-600 transition-colors">About</a>
        </div>
        <a href="/submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium">
          Submit Tool
        </a>
      </nav>
    </header>
    
    <main class="flex-1">
      <slot />
    </main>
    
    <footer class="bg-gray-800 text-white py-12 mt-20">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-4 gap-8">
          <div class="md:col-span-2">
            <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
              üêß Linux Directory
            </h3>
            <p class="text-gray-300 mb-4">
              Curating the best open-source tools and Linux software for developers, sysadmins, and enthusiasts.
            </p>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2 text-gray-300">
              <li><a href="/" class="hover:text-white">Home</a></li>
              <li><a href="/categories" class="hover:text-white">Categories</a></li>
              <li><a href="/submit" class="hover:text-white">Submit Tool</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Categories</h4>
            <ul class="space-y-2 text-gray-300">
              <li><a href="/categories/development" class="hover:text-white">Development</a></li>
              <li><a href="/categories/security" class="hover:text-white">Security</a></li>
              <li><a href="/categories/productivity" class="hover:text-white">Productivity</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; 2025 Linux Directory. Built with Astro & hosted on Cloudflare. Open source at heart.</p>
        </div>
      </div>
    </footer>
  </body>
</html>