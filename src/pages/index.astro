---

<Layout title="Linux Directory - Discover the Best Open Source Tools">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Hero Section -->
    <section class="hero-section">
      <h1 class="hero-title">
        Discover the Best <span class="hero-highlight">Linux Tools</span>
      </h1>
      <p class="hero-subtitle">
        Curated collection of <strong>170+</strong> open-source tools, Linux distributions, and development utilities trusted by developers worldwide.
      </p>
      
      <!-- Search Bar -->
      <div class="search-container">
        <input 
          type="text" 
          placeholder="Search tools, categories, or tags..." 
          class="search-input"
          id="search-input"
        />
      </div>

      <!-- Quick Stats -->
      <div class="stats-grid">
        <div class="stats-card">
          <div class="stats-number">170+</div>
          <div class="stats-label">Tools Listed</div>
        </div>
        <div class="stats-card">
          <div class="stats-number">12</div>
          <div class="stats-label">Categories</div>
        </div>
        <div class="stats-card">
          <div class="stats-number">10k+</div>
          <div class="stats-label">Monthly Users</div>
        </div>
        <div class="stats-card">
          <div class="stats-number">8</div>
          <div class="stats-label">Added This Week</div>
        </div>
      </div>
    </section>

    <!-- Categories Grid -->
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Browse by Category</h2>
        <p class="section-subtitle">Find tools organized by use case and functionality</p>
      </div>
      <div class="categories-grid">
        {categories.map(category => (
          <a 
            href={`/categories/${category.name.toLowerCase().replace(/\s+/g, '-')}`}
            class="category-card"
          >
            <div class="category-icon">{category.icon}</div>
            <h3 class="category-name">{category.name}</h3>
            <div class="category-meta">
              <span class="category-count">{category.count} tools</span>
              <span class="category-arrow">‚Üí</span>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Featured Tools -->
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Featured Tools</h2>
        <p class="section-subtitle">Essential tools recommended by the community</p>
      </div>
      <div class="tools-grid">
        {featuredTools.map(tool => (
          <div class="tool-card">
            <div class="tool-header">
              <h3 class="tool-name">{tool.name}</h3>
              <span class="tool-pricing">{tool.pricing}</span>
            </div>
            <p class="tool-description">{tool.description}</p>
            <div class="tool-category">
              <span class="tool-category-label">{tool.category}</span>
            </div>
            <div class="tool-tags">
              {tool.tags.map(tag => (
                <span class="tool-tag">{tag}</span>
              ))}
            </div>
            <a href={tool.website} target="_blank" rel="noopener noreferrer" class="tool-link">
              Visit Website
              <svg class="tool-link-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section">
      <h2 class="cta-title">Share Your Favorite Tools</h2>
      <p class="cta-subtitle">
        Help grow our community by submitting tools you love. Every contribution makes Linux more accessible.
      </p>
      <a href="/submit" class="cta-button">
        Submit a Tool
      </a>
    </section>

    </div>
  </div>
</Layout>